# CivitAI Downloader v2 - Environment Variables Template
# コピーして使用: cp .env.example .env
# READMEの手順に従って設定してください

# ============================================================================
# 必須設定 - これらの設定は必ず変更してください
# ============================================================================

# CivitAI APIキー（必須）
# https://civitai.com/user/account から取得してください
CIVITAI_API_KEY=your_actual_civitai_api_key_here

# ============================================================================
# API設定
# ============================================================================
CIVITAI_BASE_URL=https://civitai.com/api/v1
CIVITAI_TIMEOUT=30
CIVITAI_MAX_RETRIES=3
CIVITAI_RATE_LIMIT=0.5

# ============================================================================
# ダウンロード設定
# ============================================================================
CIVITAI_DOWNLOAD_DIR=./downloads
CIVITAI_CONCURRENT_DOWNLOADS=3
CIVITAI_CHUNK_SIZE=8192
CIVITAI_DOWNLOAD_TIMEOUT=300
CIVITAI_VERIFY_CHECKSUMS=true
CIVITAI_ORGANIZE_BY_TYPE=true

# ============================================================================
# セキュリティ設定
# ============================================================================
CIVITAI_VERIFY_SSL=true
CIVITAI_ENABLE_SCANNING=true
CIVITAI_MAX_FILE_SIZE=10737418240  # 10GB
CIVITAI_SCAN_TIMEOUT=300
CIVITAI_REQUIRE_CONFIRMATION=true
CIVITAI_ALLOW_NSFW=false
CIVITAI_ALLOW_PICKLE=false

# ============================================================================
# ログ・監視設定
# ============================================================================
CIVITAI_LOG_LEVEL=INFO
CIVITAI_LOG_FILE=logs/civitai-downloader.log
CIVITAI_LOG_MAX_SIZE=104857600  # 100MB
CIVITAI_LOG_BACKUP_COUNT=5

# ============================================================================
# データベース設定
# ============================================================================
CIVITAI_DATABASE_URL=sqlite:///data/civitai.db
CIVITAI_DB_POOL_SIZE=5
CIVITAI_DB_TIMEOUT=30

# ============================================================================
# パフォーマンス設定
# ============================================================================
CIVITAI_OPTIMIZATION_MODE=adaptive
CIVITAI_CACHE_ENABLED=true
CIVITAI_CACHE_TTL=900  # 15分
CIVITAI_MAX_CONCURRENT_REQUESTS=3

# ============================================================================
# 検索設定
# ============================================================================
CIVITAI_DEFAULT_PAGE_LIMIT=100
CIVITAI_MAX_PAGE_LIMIT=200
CIVITAI_DUAL_STRATEGY_ENABLED=true
CIVITAI_DEDUPLICATION=true

# ============================================================================
# 分析設定
# ============================================================================
CIVITAI_ANALYTICS_ENABLED=true
CIVITAI_ANALYTICS_RETENTION_DAYS=90
CIVITAI_MONITORING_ENABLED=true

# ============================================================================
# エンタープライズ機能設定（オプション）
# ============================================================================
CIVITAI_ENCRYPTION_ENABLED=false
CIVITAI_ENCRYPTION_LEVEL=standard
CIVITAI_CIRCUIT_BREAKER_ENABLED=true
CIVITAI_HEALTH_MONITORING_ENABLED=true
CIVITAI_PLUGIN_ENABLED=true

# ============================================================================
# 開発・デバッグ設定（本番環境では false に設定）
# ============================================================================
CIVITAI_DEBUG_MODE=false
CIVITAI_TEST_MODE=false
CIVITAI_MOCK_API=false
CIVITAI_PROFILE_PERFORMANCE=false